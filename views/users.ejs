<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link rel="stylesheet" href="../public/stylesheets/users.css">
</head>
<body>
    <!--Navbar-->
    <div class="container-fluid">
        <!-- Second navbar for profile settings -->
        <nav class="navbar navbar-inverse">
          <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <a class="navbar-brand" href="#">Brand</a>
            </div>
        
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div>
              <ul class="nav navbar-nav navbar-right">
                <li><a href="/">Home</a></li>
                <li><a href="/users">Users</a></li>
              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container -->
        </nav><!-- /.navbar -->
    </div><!-- /.container-fluid -->

    <!--Table-->
    <div class="container">
      <div class="row col-md-12 custyle">
      <table class="table table-striped custab">
      <thead>
      <a href="/users/add" class="btn btn-primary btn-xs pull-right"><b>+</b> Add new users</a>
          <tr>
              <th>ID</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>User Name</th>
              <th>Birtday</th>
              <th>Email</th>
              <th>Description</th>
              <th>Image Url</th>
              <th class="text-center">Action</th>
          </tr>
      </thead>
      <!-- userList from database to be mapped -->
      <% userList.map(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.firstName %></td>
          <td><%= user.lastName%></td>
          <td><%= user.userName%></td>
          <td><%= user.birthDay%></td>
          <td><%= user.email%></td>
          <td><%= user.description%></td>
          <td><%= user.imgUrl%></td>
          <td class="text-center">
            <a class='btn btn-info btn-xs' href="#">
              <span class="glyphicon glyphicon-edit"></span> 
                Edit
              </a> 
              <a href="/users/<%= user.id %>/delete" class="btn btn-danger btn-xs">
                <span class="glyphicon glyphicon-remove"></span>
                  Del
              </a>
          </td>
      </tr>

      <% }) %>
              
      </table>
      </div>
  </div>


</body>
</html>